            <TextView
                android:text="@string/speechify_desc"
                android:justificationMode="inter_word"
                style="@style/container_desc_style" />
        </LinearLayout>

        <LinearLayout
            style="@style/normal_container_style">

            <LinearLayout
                android:id="@+id/krisp"
                android:background="@color/white"
                style="@style/container_title_section_layout">

                <ImageView
                    android:src="@drawable/logo_krisp"
                    style="@style/container_image_style"
                    android:contentDescription="@string/krisp_img_desc" />

                <TextView
                    android:text="@string/krisp"
                    style="@style/container_title_style"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <TextView
                android:text="@string/krisp_desc"
                android:justificationMode="inter_word"
                style="@style/container_desc_style" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>